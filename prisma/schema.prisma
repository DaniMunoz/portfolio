// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("SUPABASE_POSTGRESQL_URI")
}

model Project {
  id            String @default(cuid()) @id
  project_en    String
  project_es    String
  image         String
  customer      String
  customer_web  String
  summary_en    String
  summary_es    String
  technologies  String
  text_en       String
  text_es       String
}

model Qualification {
  id              String @default(cuid()) @id
  type            String
  image           String
  link            String
  institution_en  String
  institution_es  String
  title_en        String
  title_es        String
  text_en         String
  text_es         String
}